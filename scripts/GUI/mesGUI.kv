#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<Menu>:
    manager: screen_manager
    orientation: "vertical"
    ActionBar:
        size_hint_y: 0.1
        ActionView:
            ActionPrevious:
            ActionButton:
                text: "Control"
                on_release:
                    root.manager.current = "control"
                    root.manager.transition.direction = 'up'

            ActionButton:
                text: "Orders"
                on_release:
                    root.manager.current = "orders"
                    root.manager.transition.direction = 'up'

            ActionButton:
                text:"Help"
                on_release:
                    root.manager.current = "help"
                    root.manager.transition.direction = 'up'
    Manager:
        id: screen_manager

<MesControl>:


<Help>:

<MesOrderScreen>:

<Manager>:
    controlScreen: controlScreen
    helpScreen: helpScreen
    orderScreen: orderScreen

    MesControl:
        id: controlScreen
        name: 'control'

    Help:
        id: helpScreen
        name: 'help'

    MesOrderScreen:
        id: orderScreen
        name: 'orders'